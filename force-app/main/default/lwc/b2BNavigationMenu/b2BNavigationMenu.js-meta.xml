<?xml version="1.0" encoding="UTF-8"?>
<!-- navigationMenu.js-meta.xml -->
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata" fqn="navigationMenu">
    <apiVersion>52.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Navigation Menu</masterLabel>
    <description>Custom Navigation Menu</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="parentCategoryName"
                type="String"
                default=""
                label="Parent Category Name"
                description="Name of the parent category of your store brand"/>
            <property name="homeUrl"
                type="String"
                default=""
                label="Home Link URL"
                description="Provide URL of your brand page"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>